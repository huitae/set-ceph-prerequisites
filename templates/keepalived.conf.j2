vrrp_script chk_haproxy {
  script "killall -0 haproxy" # check the haproxy process
  interval 2 # every 2 seconds
  weight 2 # add 2 points if OK
}

vrrp_instance VI_1 {
  interface eth0 # interface to monitor
  {% if ansible_hostname == keepalived_master %}
  state MASTER
  {% else %}
  state SLAVE
  {% endif %}
  virtual_router_id 60
  {% if ansible_hostname == keepalived_master %}
  priority {{ keepalived_master_priority }} # 101 on haproxy, 100 on haproxy2
  {% else %}
  priority 100 # 101 on haproxy, 100 on haproxy2
  {% endif %}
  virtual_ipaddress {
    {{ rgw_vip }} # virtual ip address
  }
  track_script {
    chk_haproxy
  }
}

